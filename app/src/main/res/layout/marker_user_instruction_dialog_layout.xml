<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bg_to_remove_marker_user_instruction_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_remove_transparent"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_front"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:text="CÁC THAO TÁC GIAO TIẾP"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnClose_marker_user_instruction_dialog_layout"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_close" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:orientation="horizontal"
            android:id="@+id/layout1_marker_user_instruction_dialog_layout">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:background="@color/bg_strong_light"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_headlights_on" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="HẠ ĐỘ SÁNG ĐÈN PHA"
                    android:textColor="@color/background_front"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <ImageView
                android:layout_width="109dp"
                android:layout_height="109dp"
                android:src="@drawable/ic_double_click"
                android:padding="10dp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="NHẤN LIÊN TỤC 2 LẦN"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:orientation="horizontal"
            android:id="@+id/layout2_marker_user_instruction_dialog_layout">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:background="@color/bg_slow_down"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_report_hazard" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="NGUY HIỂM, NÊN GIẢM TỐC ĐỘ"
                    android:textColor="@color/background_front"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <ImageView
                android:layout_width="109dp"
                android:layout_height="109dp"
                android:src="@drawable/ic_2_down"
                android:padding="10dp"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="VUỐT 2 NGÓN TAY XUỐNG"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:orientation="horizontal"
            android:id="@+id/layout3_marker_user_instruction_dialog_layout">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:background="@color/bg_watcher"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_report_camera_speed" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="CÓ GIÁM SÁT GẦN ĐÂY"
                    android:textColor="@color/background_front"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <ImageView
                android:layout_width="109dp"
                android:layout_height="109dp"
                android:src="@drawable/ic_3_down"
                android:padding="10dp"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="VUỐT 3 NGÓN TAY XUỐNG"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:orientation="horizontal"
            android:id="@+id/layout4_marker_user_instruction_dialog_layout">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:background="@color/bg_turn_around"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_report_turn_around" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="NÊN QUAY ĐẦU XE"
                    android:textColor="@color/background_front"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <ImageView
                android:layout_width="109dp"
                android:layout_height="109dp"
                android:src="@drawable/ic_2_up"
                android:padding="10dp"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="VUỐT 2 NGÓN TAY LÊN"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:orientation="horizontal"
            android:id="@+id/layout5_marker_user_instruction_dialog_layout">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:background="@color/bg_hello"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_report_hazard_stopped" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="CHÀO HỎI"
                    android:textColor="@color/background_front"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <ImageView
                android:layout_width="109dp"
                android:layout_height="109dp"
                android:src="@drawable/ic_press_hello"
                android:padding="10dp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="ẤN VÀO NÚT CHÀO HỎI"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>
        
        
    </LinearLayout>
</LinearLayout>