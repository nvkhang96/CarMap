<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bg_to_remove_setting_my_car_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_remove_transparent"

    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="426dp"
        android:background="@drawable/bg_btn_white_stroke"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:text="Cài đặt thông tin xe"
            android:textAlignment="center"
            android:textStyle="" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/divider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:text="Loại xe"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layoutCon_setting_my_car_dialog_layout"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--<TextView-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:background="@drawable/bg_btn_round_white_black_stroke"-->
                <!--android:gravity="center"-->
                <!--android:text="CON"-->
                <!--android:textSize="20sp"-->
                <!--android:textStyle="bold" />-->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_btn_green"
                    android:padding="8dp"
                    android:src="@drawable/ic_car_trans" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:text="Xe con"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutTai_setting_my_car_dialog_layout"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--<TextView-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:background="@drawable/bg_btn_round_white_black_stroke"-->
                <!--android:gravity="center"-->
                <!--android:text="TẢI"-->
                <!--android:textSize="20sp"-->
                <!--android:textStyle="bold"-->
                <!--android:layout_marginTop="10dp"/>-->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_btn_green"
                    android:padding="8dp"
                    android:src="@drawable/ic_truck_trans" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:text="Xe tải"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutKhach_setting_my_car_dialog_layout"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--<TextView-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:background="@drawable/bg_btn_round_white_black_stroke"-->
                <!--android:gravity="center"-->
                <!--android:text="KHÁCH"-->
                <!--android:textSize="14sp"-->
                <!--android:textStyle="bold"-->
                <!--android:layout_marginTop="10dp"/>-->

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_btn_green"
                    android:padding="6dp"
                    android:src="@drawable/ic_bus_trans" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:text="Xe khách"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutContainer_setting_my_car_dialog_layout"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--<TextView-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:background="@drawable/bg_btn_round_white_black_stroke"-->
                <!--android:gravity="center"-->
                <!--android:text="Container"-->
                <!--android:textSize="14sp"-->
                <!--android:textStyle="bold"-->
                <!--android:layout_marginTop="10dp"/>-->

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_btn_green"
                    android:padding="8dp"
                    android:src="@drawable/ic_container_trans" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:text="Container"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/divider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:text="Hãng và đời xe"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/editTextModel_setting_my_car_dialog_layout"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="Ví dụ: Toyota Innova 2018"
            android:inputType="text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/divider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:text="Màu xe"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imColor_setting_my_car_dialog_layout"
                android:layout_width="230dp"
                android:layout_height="34dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp" />

            <Button
                android:id="@+id/btnChooseColor_setting_my_car_dialog_layout"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:text="ĐỔI" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDismiss_setting_my_car_dialog_layout"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="40dp"
                android:background="@drawable/bg_btn_dismiss"
                android:text="HUỶ"
                android:textColor="@color/background_front"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnConfirm_setting_my_car_dialog_layout"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="30dp"
                android:background="@drawable/bg_btn_send"
                android:text="CHỌN"
                android:textColor="@color/background_front"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>