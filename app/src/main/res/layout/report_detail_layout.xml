<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutReport_detail"

    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/background_front"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/btnPrevious_report_detail"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_keyboard_arrow_left_white_48dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="7">

        <LinearLayout
            android:id="@+id/btnCurrent_report_detail"
            android:layout_width="match_parent"

            android:layout_height="76dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true">


            <ImageView
                android:id="@+id/imIcon_report_detail"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:padding="10dp"
                android:src="@drawable/ic_report_accident" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/tvType_report_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="LOẠI REPORT"
                    android:textColor="@color/textColorPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDistance_report_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Cách 10 m"
                    android:textColor="@color/textColorSecondary" />

                <TextView
                    android:id="@+id/tvAddress_report_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Địa chỉ"
                    android:textColor="@color/colorPrimaryLight" />
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar_report_detail"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1"
            android:progress="1"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/btnNext_report_detail"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_keyboard_arrow_right_white_48dp" />

</LinearLayout>