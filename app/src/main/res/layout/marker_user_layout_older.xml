<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/textColorSecondary"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imvAvatar_marker_user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_btn_report_hazard"
            android:padding="6dp"
            app:srcCompat="@drawable/ic_report_hazard_stopped" />

        <TextView
            android:id="@+id/tvName_marker_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="@color/background_front" />

        <!--<TextView-->
        <!--android:id="@+id/tvDOB_marker_user"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="13/12/1996"-->
        <!--android:textAlignment="center"-->
        <!--android:textColor="@color/background_front"-->
        <!--android:textSize="14sp" />-->

        <TextView
            android:id="@+id/tvEmail_marker_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textAlignment="center"
            android:textColor="@color/background_front" />

        <Button
            android:id="@+id/btnHello_marker_user"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn_yes_stroke"
            android:padding="6dp"
            android:text="Chào hỏi"
            android:textColor="@color/background_front" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/divider"
        android:id="@+id/viewTouch_maker_user">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:src="@drawable/pic_hand_touch"
            android:layout_gravity="center_horizontal"
            android:clickable="false"
            android:layout_marginTop="40dp"/>
    </LinearLayout>
</LinearLayout>